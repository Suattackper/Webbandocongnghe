@model electronics_shop.Models.LoginViewModels

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="login-section container mx-auto my-5 px-2 sm:px-8">
    <div class="mx-auto max-w-[500px] rounded-lg bg-white p-5">
        <div class="my-5">
            <img class="mx-auto" src="~/Content/images/svg/logo.svg" alt="Besnik." />
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="flex flex-col gap-4">
                <div class="relative flex h-[40px] items-center">
                    <i class="bi bi-envelope absolute ml-2 flex text-[24px] text-gray-400"></i>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input pl-10", placeholder = "Email" } })
                    <div class="text-red-500 mt-1">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-500" })
                    </div>
                </div>
                <div class="relative flex h-[40px] items-center">
                    <i class="bi bi-lock absolute ml-2 flex text-[24px] text-gray-400"></i>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input pl-10", placeholder = "Password" } })
                    <div class="text-red-500 mt-1">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-500" })
                    </div>
                </div>
                <button class="btn-effect transition-all-300 h-full w-full rounded-lg bg-primary-color p-2" type="submit">
                    <span class="font-bold uppercase text-white">Login</span>
                </button>
            </div>
        }
        <span class="or text-gray-title flex h-[50px] items-center py-2">
            <span class="mx-2 text-sm uppercase">Or</span>
        </span>
        <div class="flex flex-col flex-wrap justify-center gap-5 sm:flex-row">
            <button class="transition-all-300 flex h-[50px] min-w-[100px] items-center justify-center rounded-lg bg-google hover:scale-110">
                <i class="bi bi-google flex text-3xl text-white"></i>
            </button>
        </div>
        <div class="mt-5 flex flex-col items-center justify-center border-t border-t-gray-400 pt-5">
            <span>Don't have a account?</span>
            <a href="@Url.Action("Register", "Account")" class="btn-effect rounded-lg bg-primary-color p-2 text-white">
                <span>Create one</span>
            </a>
        </div>
    </div>
</div>

<div class="loader fixed z-[999] flex h-screen w-screen items-center justify-center bg-body">
    <div class="loader-content flex flex-col items-center gap-2">
        <span class="text-3xl font-semibold text-gray-200">Besnik.</span>
        <div class="flex h-1 w-40 gap-1 overflow-hidden bg-gray-200">
            <div class="animation-loader h-full w-20 bg-primary-color"></div>
        </div>
    </div>
</div>

@section scriptsJS {
    <script src="~/Content/unpkg.com/metismenujs%401.4.0/dist/metismenujs.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/js/main.js"></script>
}
